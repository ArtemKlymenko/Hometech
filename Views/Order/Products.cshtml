@using Hometech.Controllers
@{
    ViewData["Title"] = "Ваш заказ";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <table class="table">
        <form method="post">
            @foreach (ProductsInfo p in Model)
            {
                <tr><td>@p.category @p.manufacturer @p.vendor_code </td><td>@p.price</td>
                    @if (p.is_available)
                    {
                        <td>В наличии</td>
                    }
                    else
                    {
                        <td>Товар закончился</td>
                    }
                    <td><input type="number"></td>
                </tr>
            }
        </form>
        </table>
    </div>
</div>